<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EE"
    tools:context=".MenuActivity">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="899dp"
            android:layout_height="170dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/curve" />


        <ImageButton
            android:id="@+id/aboutUsBtn"
            android:layout_width="38dp"
            android:layout_height="45dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@id/kitchenkonnectLabel"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/aboutus" />

        <ImageButton
            android:id="@+id/logo"
            android:layout_width="148dp"
            android:layout_height="59dp"
            android:layout_marginStart="76dp"
            android:layout_marginTop="16dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toEndOf="@+id/aboutUsBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/splashbg" />

        <TextView
            android:id="@+id/kitchenkonnectLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/mondric"
            android:text="Kitchenkonnect"
            android:textColor="@color/black"
            android:textSize="33dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo" />

        <ImageButton
            android:id="@+id/userProfile"
            android:layout_width="57dp"
            android:layout_height="45dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="@id/kitchenkonnectLabel"
            android:layout_marginEnd="5dp"
            android:background="@null"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintStart_toEndOf="@+id/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/profile_user" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:layout_marginTop="56dp"
            android:background="#D6D5D3"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kitchenkonnectLabel">


            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp">

                <ImageButton
                    android:id="@+id/italianFood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1.2dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/italianlogo" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/filipinoFood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/filipinologo" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="130dp"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/koreanFood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:src="@drawable/koreanlogo" />
            </RelativeLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

            <RelativeLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="190dp">

                    <ImageButton
                        android:id="@+id/breakfastLogo"
                        android:layout_width="500dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:scaleType="fitCenter"
                        android:src="@drawable/breakfastbg" />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="390dp"
                android:layout_height="190dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                <ImageButton
                    android:id="@+id/lunchlogo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:paddingRight="15dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lunchbg" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="390dp"
                android:layout_height="190dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

                <ImageButton
                    android:id="@+id/dinnerlogo"
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="-5dp"
                    android:background="@null"
                    android:paddingRight="5dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/dinnerbg" />


            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
